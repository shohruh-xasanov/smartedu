<% var color %>
<% var size %>
  <div class="row">
  <div class="col-12">
    <div style="
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
      ">
      <h4 class="m-3" style="font-weight: 700">Buyurtmalar ro'yhati</h4>
      <button type="button" class="btn btn-primary waves-effect waves-light" data-toggle="modal"
        data-target=".bs-example-modal-lg">
        Yaratish
      </button>
    </div>
 

    <div class="card col-md-12 table-responsive">
      <div class="card-body table-responsive">
        <table
          id="datatable"
          class="table table-bordered text-center "
          style="border-collapse: collapse; border-spacing: 0; width: 150%; flex-wrap: wrap;"
        >
          <thead>
            <tr>
              <th>User</th>
              <th>Phone</th>
              <th>Manzili</th>
              <th>Umumiy So'mma</th>
              <th>Umumiy Soni</th>
              <th>Order_id</th>
              <th>Mahsulot Nomi</th>
              <th>Rangi</th>
              <th>O'lchami</th>
              <th>Satatusi</th>
              <th>Date</th>
              <th style="width: 5%">Sozlamalar</th>
            </tr>
          </thead>

          <tbody>
            <% for(let item of order) {%>
              <tr>
                <td>
                  <%= item.userID.fullName %>
                </td>
                <td>
                  <%= item.phone %>
                </td>
                <td>
                  <%= item.address %>
                </td>
                <td>
                  <%= item.totalPrice %>
                </td>
                <td>
                  <%= item.totalNum %>
                </td>
                <td>
                  <%= item.order_id %>
                </td>
                <td>
                <% for(let k of item.products) {%>
                  <%= k.productID.name.uz %> <br/>
                  <%= k.productID.name.ru %> <br/>
                <%}%>
              </td>
              <td>
                <% for(let c of item.products) {%>
                  <%  if (c.color) {%>
                   <%= c.color %> <br/>
                   <%} else {%>
                     Yo'q <br/>
                 <%}}%>
              </td>
              <td>
                <% for(let s of item.products) {%>
                 <%  if (s.size) {%>
                  <%= s.size %> <br/>
                  <%} else {%>
                    Yo'q <br/>
                <%}}%>
              </td>
                <td>
                  <%= item.status %> 
                </td>
                <td>
                  <%= moment(item.createdAt).format("DD-MM-YYYY") %>
                </td>
                <td style="
                  display: flex;
                  flex-direction: row;
                  justify-content: space-around;
                  align-items: center;
                ">
                  <form method="POST" action="<%=`/api/order/${item._id}?_method=PUT`%>" class="col-md-8" class="btn btn-warning">
                    <button type="submit" class="btn btn-danger">
                      <i class="fas fa-cog"></i>
                    </button>
                  </form>
                  <br>
                  <form method="POST" class="hidden-r" action="<%=`/api/order/${item._id}?_method=DELETE`%>">
                    <button type="submit" class="btn btn-danger">
                      <i class="fa fa-trash"></i>
                    </button>
                  </form>
                </td>
              </tr>
              <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <!-- end col -->
</div>
<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title mt-0" id="myLargeModalLabel">Yaratish</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/api/category" method="POST" >
          <div class="mb-3">
            <label for="">Name </label>
            <input type="text" name="nameuz" class="form-control"  />
          </div>
          <div class="mb-3">
            <label for="">Название </label>
            <input type="text" name="nameru" class="form-control"  />
          </div>
          <button type="submit" class="btn btn-primary">Saqlash</button>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js"></script>
