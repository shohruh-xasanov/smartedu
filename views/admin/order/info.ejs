<div class="col-md-12">
    <div class="card m-b-30">
      <div class="card-body">
        <h4 class="mt-2 mb-4">Buyurtma haqida malumot</h4>
        <ul class="nav nav-pills nav-justified" role="tablist">
          <li class="nav-item waves-effect waves-light">
            <a class="nav-link active" data-toggle="tab" href="#home-1" role="tab">
              <span class="d-none d-md-block font-14">Buyurtma haqida malumot</span>
              <span class="d-block d-md-none"><i class="mdi mdi-home-variant h5"></i></span>
            </a>
          </li>
        </ul>
        <div class="tab-content">
          <div class="tab-pane active p-3" id="home-1" role="tabpanel">
            <table class="table table-bordered border-primary text-center">
              <thead>
                <tr>
                  <th scope="col" style="font-weight: 600; width: 35%;">Bo'limlar</th>
                  <th scope="col" style="font-weight: 600;">Ma'lumotlar</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>Buyurtma beruvchining ismi</td>
                  <td><%= result.userID.fullName  %> </td>
                </tr>
                <tr>
                  <td>Buyurtma beruvchining telefon raqmi</td>
                  <td><%= result.phone %> </td>
                </tr>
                <tr>
                  <td>Buyurtma beruvchining manzili</td>
                  <td><%= result.address %> </td>
                </tr>
                <tr>
                  <td>Buyurtma umumiy miqdori</td>
                  <td><%= result.totalPrice %> </td>
                </tr>
                <tr>
                  <td>Buyurtma umumiy soni</td>
                  <td><%= result.totalNum %> </td>
                </tr>
                <tr>
                  <td>Buyurtma ID </td>
                  <td><%= result.order_id %> </td>
                </tr>
                <tr>
                  <td>Mahsulot nomi</td>
                  <td>
                    <% for(let k of result.products) {%>
                      <%= k.productID.name.uz %> <br/>
                      <%= k.productID.name.ru %> <br/>
                    <%}%>
                  </td>
                </tr>
                <tr>
                  <td>Mahsulot rangi</td>
                  <td>
                    <% for(let c of result.products) {%>
                      <%  if (c.color) {%>
                       <%= c.color %> <br/>
                       <%} else {%>
                         Yo'q <br/>
                     <%}}%>
                  </td>
                </tr>
                <tr>
                  <td>Mahsulot o'lchami </td>
                  <td>
                    <% for(let s of result.products) {%>
                      <%  if (s.size) {%>
                       <%= s.size %> <br/>
                       <%} else {%>
                         Yo'q <br/>
                     <%}}%>
                  </td>
                </tr>
                <tr>
                  <td>Mahsulot Statusi</td>
                  <td><%= result.status %> </td>
                </tr>
                <tr>
                  <td>Buyurtma amalga oshirilgan vaqt </td>
                  <td><%= moment(result.createdAt).format("DD-MM-YYYY") %></td>
                </tr>
               
              </tbody>
            </table>
          </div>
  
        </div>
      </div>
    </div>
  </div>