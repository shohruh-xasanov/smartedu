
  <div class="row">
    <div class="col-12">
      <div style="
          display: flex;
          flex-direction: row;
          justify-content: space-between;
          align-items: center;
        ">
        <h4 class="m-3" style="font-weight: 700">Frazalar uchun ro'yhat</h4>
        <button type="button" class="btn btn-primary waves-effect waves-light" data-toggle="modal"
          data-target=".bs-example-modal-lg">
          Yaratish
        </button>
      </div>
   
  
      <div class="card m-b-30">
        <div class="card-body">
          <table id="datatable" class="table table-bordered text-center"
            style="border-collapse: collapse; border-spacing: 0; width: 100%">
            <thead>
              <tr>
                <th style="width: 40%">Fraza</th>
                <th>Muallifi</th>
                <th>Yaratilgan sana</th>
                <th style="width: 15%">Sozlamalar</th>
              </tr>
            </thead>
  
            <tbody>
              <% for(item of phrase) {%>
                <tr>
                  <td>
                    <%= item.title%>
                  </td>
                  <td>
                    <%= item.teachersID.fullname%>
                  </td>
                  <td>
                    <%= item.createdAt.toLocaleString() %>
                  </td>
                  <td style="
                    display: flex;
                    flex-direction: row;
                    justify-content: space-around;
                    align-items: center;
                  ">
                    
                    <a class="btn btn-warning" href="<%=`/phrase/${item._id}`%>">
                      <i class="fas fa-cog"></i>
                    </a>
                    <form method="POST" class="hidden-r" action="<%=`/phrase/${item._id}?_method=DELETE`%>">
                      <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i>
                      </button>
                    </form>
                  </td>
                </tr>
                <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <!-- end col -->
  </div>
  <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title mt-0" id="myLargeModalLabel">Yaratish</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <div class="modal-body">
          <form action="/phrase" method="POST" >
            <div class="mb-3">
              <label for="">Fraza </label>
              <input type="text" name="title" class="form-control"  />
            </div>
            <div class="input-group mt-2 mb-2" style="display: flex; flex-direction: column">
              <label for="">O'qituvchini tanlang</label>
              <select name="teachersID" class="form-control" value="" id="filterTheme">
                  <option style="font-weight: bold">Tanlash ...</option>
                  <% for (let item of teachers) {%>
                  <option value="<%= item._id %>"><%= item.fullname %></option>
                  <% } %>
              </select>
              </div>
            <button type="submit" class="btn btn-primary">Saqlash</button>
          </form>
        </div>
      </div>
    </div>
  </div>